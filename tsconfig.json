{
	"compilerOptions": {
		// transpilation settings
		"jsx": "react-jsx",
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ESNext",

		// dev tools
		"sourceMap": true,

		// features configuration
		"esModuleInterop": true,
		"strict": true,

		// filesystem
		"baseUrl": "./frontend",
		"paths": {}
	}
}
